<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-50dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="100dp"
                        android:padding="10dp"
                        android:layout_height="100dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        style="@style/TitleTextStyle"
                        android:id="@+id/tv_full_name_PD"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondary"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/tv_emailid_PD"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:id="@+id/linear_change_password_PD"
                        android:background="@drawable/card_corners"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Change Password "
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/main_activity_design"
            android:paddingTop="70dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/colorAccent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Basic Information"
                            style="@style/TitleTextStyle"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Full Name"
                                style="@style/TitleTextStyle"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:id="@+id/tv_student_name__PD"
                                style="@style/TitleTextStyle"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Status"
                                style="@style/TitleTextStyle"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:id="@+id/tv_student_status_PD"
                                style="@style/TitleTextStyle"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Created On"
                                style="@style/TitleTextStyle"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:id="@+id/tv_student_create_PD"
                                style="@style/TitleTextStyle"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:text="Updated On"
                                style="@style/TitleTextStyle"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:id="@+id/tv_student_updated_PD"
                                style="@style/TitleTextStyle"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/colorAccent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Contact Information"
                            style="@style/TitleTextStyle"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Full Name"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                style="@style/TitleTextStyle"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/edt_full_name_PD"
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:inputType="textPersonName"
                                android:maxLength="50" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Email Id"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                style="@style/TitleTextStyle"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/edt_email_id_PD"
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:inputType="textEmailAddress"
                                android:maxLength="50" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Contact Number"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                style="@style/TitleTextStyle"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/edt_contact_PD"
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:inputType="number"
                                android:maxLength="10" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Address"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                style="@style/TitleTextStyle"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/edt_address_PD"
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="72dp"
                                android:lines="5"
                                android:scrollbars="vertical"
                                android:maxLines="10"
                                android:inputType="textMultiLine"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Aadhar Number"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                style="@style/TitleTextStyle"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/edt_aadhar_PD"
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:inputType="number"
                                android:maxLength="12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:layout_marginTop="20dp"
                            android:gravity="end"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:id="@+id/linear_active_update"
                                android:background="@drawable/card_corners"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Update"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    style="@style/TitleTextStyle"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:id="@+id/linear_update_details"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:id="@+id/linear_cancel"
                                    android:background="@drawable/card_corners"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Cancel"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="@color/white"
                                        style="@style/TitleTextStyle"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:id="@+id/linear_update"
                                    android:background="@drawable/card_corner_green"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Update"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="@color/white"
                                        style="@style/TitleTextStyle"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
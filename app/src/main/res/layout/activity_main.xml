<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                style="@style/TitleTextStyle"
                android:text="Welcome to..."
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                style="@style/TitleTextStyle"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/main_activity_design"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/linear_live_lect"
                            android:layout_margin="10dp"
                            android:elevation="3dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/button_drawable"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                style="@style/TitleTextStyle"
                                android:text="Lecture Links"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:src="@drawable/video_file_icon"
                                android:padding="10dp"
                                android:layout_height="80dp"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/linear_test_results"
                            android:layout_margin="10dp"
                            android:elevation="3dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/dashboard_nav_yesllow"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                style="@style/TitleTextStyle"
                                android:text="Test Result"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:src="@drawable/bar_chart_icon"
                                android:padding="10dp"
                                app:tint="@color/white"
                                android:layout_height="80dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/linear_enrolled_courses"
                            android:layout_margin="10dp"
                            android:elevation="3dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/dashboard_nav_blue"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                style="@style/TitleTextStyle"
                                android:text="Enrolled Courses"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:src="@drawable/crosshairs_icon"
                                android:padding="10dp"
                                app:tint="@color/white"
                                android:layout_height="80dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/linear_test_schedule"
                            android:layout_margin="10dp"
                            android:elevation="3dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@drawable/dashboard_nav_green"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                style="@style/TitleTextStyle"
                                android:text="Test Scheduled"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:layout_width="80dp"
                                android:src="@drawable/clock_o_icon"
                                android:padding="10dp"
                                app:tint="@color/white"
                                android:layout_height="80dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/button_drawable"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/TitleTextStyle"
                            android:text="Booklet / Practice Assingments"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_width="80dp"
                            android:src="@drawable/book_icon"
                            android:padding="10dp"
                            app:tint="@color/white"
                            android:layout_height="80dp"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <TextView
                android:layout_width="match_parent"
                style="@style/TitleTextStyle"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text="Â©ChemCaliba 2023"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
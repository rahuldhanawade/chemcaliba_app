<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="5dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_img_oc"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="6"
                android:layout_marginTop="-20dp"
                android:background="@drawable/card_corners"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_category_oc"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    style="@style/TitleTextStyle"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/colorSecondary"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Category :"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_course_category_info_oc"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Start Date :"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_start_date_oc"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="End Date :"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_end_date_oc"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Duration :"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_duration_oc"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Actual Price :"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_actual_price_oc"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Offer Price :"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_sell_price_oc"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
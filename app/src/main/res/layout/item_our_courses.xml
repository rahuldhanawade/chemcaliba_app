<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="5dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/linear_buy_now"
                    android:visibility="gone"
                    android:elevation="5dp"
                    android:layout_alignTop="@+id/iv_img_oc"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/background_buy"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_cart"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:text="Buy Now"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:elevation="5dp"
                    android:id="@+id/linear_purchased"
                    android:layout_alignTop="@+id/iv_img_oc"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/background_purchased"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_thumb_up"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:text="Purchased"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:elevation="5dp"
                    android:id="@+id/linear_expired"
                    android:layout_alignTop="@+id/iv_img_oc"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/background_expired"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_warning"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:text="Expired"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/iv_img_oc"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_height="200dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignBottom="@+id/iv_img_oc"
                    android:background="@drawable/courses_card_corner"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_category_oc"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Category :"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_course_category_info_oc"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Course Date :"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_date_oc"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_duration_oc"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        style="@style/TitleTextStyle"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Actual Price :"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_actual_price_oc"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Offer Price :"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_sell_price_oc"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            style="@style/TitleTextStyle"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>